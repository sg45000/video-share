<h1>New Videos</h1>
<div class="raw">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages', object: @video%>
    <%= form_for(@video) do |f|%>
      <%= f.label :name%>
      <%= f.text_field :name, class: 'form-control'%>
      <%= f.label :url%>
      <%= f.text_field :url, class: 'form-control' %>
      <%= f.label :description%>
      <%= f.text_area :description, class: 'form-control'%>
      <% @categories.each do |category|%>
        <%= f.label "#{category.name}"%>
        <%= f.check_box :categories,{multiple: true,checked: checked?(@video,category)},category.id,nil%>
      <% end %>
      <%=f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
</div> 