<% provide(:title, @title) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%=@user.name%></h1>
            <span><%= link_to "view my profile" , @user%></span>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        <% @users.each do |user|%>
            <% if user.image? %>
                <%= image_tag user.image.to_s,size: "64x64" %>
            <% else %>
                <%= image_tag "/images/noimage.gif",size: "64x64" %>
            <% end %>
        <% end %>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @users.any? %>
            <ul class="users follow">
            </ul>
            <%=will_paginate%>
        <% end %>
    </div>  
</div>