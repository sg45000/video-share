
<%= will_paginate @videos %>
<% @videos.each do |video| %>
      <h2 class="col-md-9 col-md-offset-3 col-xs-12 title"><%=video.name%></h2>
      <div class="col-md-4 col-md-offset-3 videos col-xs-12">
        <iframe width="340" height="180" src="<%=video.embed_url%>" 
        frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

        <span class="category_list">
        <% video.categories.each do |category|%>
          <span class="btn btn-primary btn-xs"><%= category.name %></span>
        <% end %>
        </span>
        <div class="dropdown">
          <span class="fa-stack video_links">
            <i class="fas fa-circle fa-stack-2x"></i>
            <span>
              <i class="fas fa-ellipsis-v fa-stack-1x" style="color:grey;"></i>
            </span>
          </span>
          <div class="dropdown-content">
            <span><%=link_to("Update",edit_video_path(video),class:"original-btn")%></span>
            <span><%=link_to("Link","#{video.url}",class:"original-btn",target: "_blank")%></span>
          </div>
        </div>
      </div>
      <div class="col-md-3 desc col-xs-6"><%= video.description%></div>
<% end %> 
